{
	"name": "@mariozechner/pi-coding-agent",
	"version": "1.337.0",
	"description": "Coding agent CLI with read, bash, edit, write tools and session management",
	"type": "module",
	"piConfig": {
		"name": "pi",
		"configDir": ".pi"
	},
	"bin": {
		"pi": "src/cli.ts"
	},
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./hooks": {
			"types": "./src/core/hooks/index.ts",
			"import": "./src/core/hooks/index.ts"
		}
	},
	"files": [
		"src",
		"docs",
		"examples",
		"CHANGELOG.md"
	],
	"scripts": {
		"build:binary": "bun build --compile ./src/cli.ts --outfile dist/pi && bun run copy-binary-assets",
		"copy-binary-assets": "cp package.json dist/ && cp README.md dist/ && cp CHANGELOG.md dist/ && mkdir -p dist/theme && cp src/modes/interactive/theme/*.json dist/theme/ && cp -r docs dist/ && cp -r examples dist/",
		"test": "vitest --run"
	},
	"dependencies": {
		"@mariozechner/pi-agent-core": "workspace:*",
		"@mariozechner/pi-ai": "workspace:*",
		"@mariozechner/pi-tui": "workspace:*",
		"ajv": "^8.17.1",
		"chalk": "^5.5.0",
		"cli-highlight": "^2.1.11",
		"diff": "^8.0.2",
		"file-type": "^21.1.1",
		"glob": "^11.0.3",
		"highlight.js": "^11.11.1",
		"jiti": "^2.6.1",
		"marked": "^15.0.12",
		"minimatch": "^10.1.1",
		"strip-ansi": "^7.1.2"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"coding-agent",
		"ai",
		"llm",
		"cli",
		"tui",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/coding-agent"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
